<div class="edit-panel">
  <div class="btn-container">
    <div class="btn-group" role="group" aria-label="Basic example">
      <button type="button" class="btn btn-secondary map-button">Map</button>
      <button type="button" class="btn btn-secondary marker-button">
        Marker
      </button>
      <button type="button" class="btn btn-secondary basemap-button">
        Basemap
      </button>
    </div>
  </div>
  <section class="toggle-form">
    <div class="formwrap px-4">
      <!-- map editor -->
      <form id="map-editor" class="inactive">
        <div class="form-group">
          <label for="exampleInputEmail1">Title</label>
          <input
            id="map-editor-title"
            type="text"
            class="form-control"
            placeholder="Enter an interesting title"
          />
        </div>
        <div class="form-group">
          <label>Description</label>
          <input
            id="map-editor-desc"
            type="text"
            class="form-control"
            placeholder="A detailed description"
          />
        </div>
        <button id="save-map-button" type="button" class="btn btn-secondary">
          Save
        </button>
        <button id="delete-map-button" type="button" class="btn btn-secondary">
          Delete Map
        </button>
      </form>
      <!-- marker editor -->
      <form id="marker-editor" class="inactive">
        <div class="form-group">
          <label>Title</label>
          <input
            id="marker-editor-title"
            type="text"
            class="form-control"
            placeholder="Enter an interesting title"
          />
        </div>
        <div class="form-group">
          <label>Description</label>
          <input
            id="marker-editor-desc"
            type="text"
            class="form-control"
            placeholder="A detailed description"
          />
        </div>
        <!-- Button trigger modal -->
        <button
          type="button"
          id="image-button"
          class="btn btn-primary"
          data-toggle="modal"
          data-target="#imageModal"
        >
          Image
        </button>

        <button
          id="delete-marker-button"
          type="button"
          class="btn btn-secondary"
        >
          Delete Marker
        </button>
      </form>

      <br />
    </div>
    <div class="toggle-bg"></div>
  </section>

  <!-- Image Modal -->
  <div
    class="modal fade"
    id="imageModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="imageModalTitle"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label>Image Url</label>
            <input
              id="marker-editor-imgUrl"
              type="text"
              class="form-control"
              placeholder="Link to a cat GIF"
            />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button id="save-image-button" type="button" class="btn btn-primary">
            Save changes
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
